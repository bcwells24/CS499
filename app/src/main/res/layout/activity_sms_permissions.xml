<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/background_color">

    <!-- Header text for SMS Notifications -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Notifications"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/title_color"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- EditText for the phone number -->
    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        tools:ignore="HardcodedText" />

    <!-- Toggle Button for enabling/disabling SMS notifications -->
    <ToggleButton
        android:id="@+id/toggleButtonSmsPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Notifications ON"
        android:textOff="Notifications OFF"
        android:background="@drawable/toggle_button_background"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- TextView to show the current SMS permission status -->
    <TextView
        android:id="@+id/textViewPermissionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permission Status: Unknown"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- Button to return user to the previous screen -->
    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Return"
        app:tint="@color/button_bg"
        tools:ignore="HardcodedText" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:text="Logout"
        android:textColor="@color/button_bg"
        android:backgroundTint="@color/input_bg"
        android:layout_gravity="center_horizontal"
        tools:ignore="HardcodedText" />
</LinearLayout>
